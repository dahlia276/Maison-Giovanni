<div class="container">
  <h2>Create a new product</h2>
  <p>{{name}}</p>
  <form action="//attire/{{attire.id}}/inventory" method="POST">
    <div class="row">
      <div class="col-md-4">
        <select name="size">
          <option value="">Choose Size</option>
        
          {{#each size}}
          <option value={{this}}>{{this}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-md-4">
        <select name="color">
          <option value="">Choose Color</option>
          {{#each attire.color}}
          <option value={{attire.color}}>{{attire.color}}</option>
          {{/each}}
        </select>
      </div>
      <div class="col-md-4">
        <label> Quantity</label>
        <input type="Number" name="quantity" placeholder="Quantity"/>
      </div>
      <div class="row">
        <div class="col-md-12">
<button type="submit">Save</button>
        </div>
      </div>
      
    </div>
  </form>
</div>