<div class="container">
    <div class="row">
        {{#if attire.pictureUrl}}
        <img class="image-details" src={{attire.pictureUrl}} />
        {{/if}}
<hr>
<div class="attire-information">
     <h1 class="attire-name">{{attire.name}}</h1>
        <p class="description"> {{attire.description}}</p>
        <p>Fabric: {{attire.fabric}}</p>
        <h6 class="attire-price">Price: {{attire.price}} </h6>
<p class="available">Available colors: </p>
    {{#each attire.color}}
        {{this}}
    {{/each}}
<p class="available">Available sizes:</p> 
    {{#each attire.size}}
      {{this}}
    {{/each}}
     <form action="/cart/{{attire.id}}/add" method="post">
        <button type="submit" value="Submit" class=" att-info-btn form-control btn btn-primary submit px-3">Add to cart</button>
    </form>
</div>
   
